{
  "manifest_version": 2,
  "name": "Clarity",
  "version": "1.0.0",
  "description": "Redirect selected destinations to a target URL.",
  "permissions": [
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking",
    "webNavigation",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_action": {
    "default_title": "Clarity",
    "default_popup": "src/options/options.html"
  },
  "web_accessible_resources": [
    "src/redirect/images/redirect-background.png",
    "src/options/options.html"
  ],
  "icons": {
    "16": "src/images/favicon.ico",
    "32": "src/images/favicon.ico",
    "48": "src/images/favicon.ico",
    "128": "src/images/favicon.ico"
  }
}